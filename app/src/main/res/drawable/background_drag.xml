<!-- background_selected_drag.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/itemborder" /> <!-- Sử dụng drawable từ background_selected.xml -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F96B3F8" /> <!-- Sử dụng màu nền từ color resource -->
            <stroke android:color="#1C47C6" android:width="3dp" /> <!-- Màu xanh (#00FF00) cho viền -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
